<div class="row justify-content-md-center">
  <div class="col-lg-8 col-md-8 col-sm-12 justify-content-center d-flex">
    <div class="content-container">
      <% if Team.all.empty? %>
        <p>PLEASE CREATE AT LEAST ONE TEAM TO PROCEED </p>
        <%= link_to "CREATE NEW TEAM", new_team_path, :class => "btn-black", :id => "new-team" %>
      <% else %>
        <div class="groupsize-form" style="margin-top: 50px">
          <div style="text-align: center">
            <p>WHAT IS THE DESIRED GROUPSIZE?</p>
          </div>
          <form action="/group" method="get">
          <!--   <input id="field" type="collection" name="group_by"> -->
            <select name="group_by" id="field">
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
            </select>
            <input type="submit" class="btn-black" value="START">
          </form>
          <div class="results" style="margin-top: 30px">
            <ol>
              <% @groups.each do |group| %>
              <li>
                <div class="d-flex">
                  <% group.each do |member| %>
                    <div class="member" style="padding: 10px">
                      <%= Member.find(member).name%>
                    </div>
                  <% end %>
                </li>
              <% end %>
            </ol>
          </div>
        </div>
    <% end %>
      </div>
    </div>
</div>
