<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<div class="row justify-content-md-center">
  <div class="col-lg-8 col-md-8 col-sm-12 justify-content-center d-flex">

    <div class="content-container justify-content-center">
      <% if @team == nil %>
        <p>PLEASE CREATE AT LEAST ONE TEAM TO PROCEED </p>
        <%= link_to "CREATE NEW TEAM", new_team_path, :class => "btn-black", :id => "new-team" %>
      <% else %>
        <div style="text-align: center">
          <p>NEW RANDOM ORDER: </p>
        </div>
        <ol>
          <% @members.each do |member_id| %>
          <li>
            <%=Member.find(member_id).name %>
          </li>
          <% end %>
        </ol>

        <div class="btn-black">
          <%= link_to "AGAIN", order_path %>
        </div>

        <div class="loader-wrapper flex-column" id="mydiv">
          <p>GENERATING NEW ORDER</p>
          <div class="lds-ellipsis"><div></div><div></div><div></div><div></div></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
